<h1>Listado de posts</h1>

<table>
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Image url</th>
      <th scope="col">Content</th>
      <th scope="col">Created at</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= image_tag post.image_url %></td>
        <td><%= post.content %></td>
        <td><%= post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>